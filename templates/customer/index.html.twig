{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prename</th>
                <th>Lastname</th>
                <th>Street</th>
                <th>Housenr</th>
                <th>Postal</th>
                <th>City</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Require_cash</th>
                <th>Require_prepaid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.prename }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.street }}</td>
                <td>{{ customer.housenr }}</td>
                <td>{{ customer.postal }}</td>
                <td>{{ customer.city }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.requireCash ? 'Yes' : 'No' }}</td>
                <td>{{ customer.requirePrepaid ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customer_new') }}">Create new</a>
{% endblock %}
