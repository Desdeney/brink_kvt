{{ form_start(form) }}
    <div class="row g-4">
        <div class="col-md-6 mb-3">
            {{ form_label(form.prename, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.prename, {'attr': {'class': 'form-control form-control-lg shadow-sm', 'placeholder': 'Vorname'}}) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.lastname, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'form-control form-control-lg shadow-sm', 'placeholder': 'Nachname'}}) }}
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-8 mb-3">
            {{ form_label(form.street, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.street, {'attr': {'class': 'form-control form-control-lg shadow-sm', 'placeholder': 'Straße'}}) }}
        </div>
        <div class="col-md-4 mb-3">
            {{ form_label(form.housenr, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.housenr, {'attr': {'class': 'form-control form-control-lg shadow-sm', 'placeholder': 'Nr.'}}) }}
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4 mb-3">
            {{ form_label(form.postal, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.postal, {'attr': {'class': 'form-control form-control-lg shadow-sm', 'placeholder': 'PLZ'}}) }}
        </div>
        <div class="col-md-8 mb-3">
            {{ form_label(form.city, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control form-control-lg shadow-sm', 'placeholder': 'Stadt'}}) }}
        </div>
    </div>

    <div class="divider custom-divider my-4"></div>

    <div class="row g-4">
        <div class="col-md-6 mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg shadow-sm', 'placeholder': 'beispiel@email.de'}}) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-lg shadow-sm', 'placeholder': '+49 123 456789'}}) }}
        </div>
    </div>

    <div class="divider custom-divider my-4"></div>

    <div class="row align-items-center g-4">
        <div class="col-md-6 mb-3">
            {{ form_label(form.payment, null, {'label_attr': {'class': 'form-label fw-bold font-weight-bold text-gray-700'}}) }}
            {{ form_widget(form.payment, {'attr': {'class': 'form-select form-select-lg shadow-sm'}}) }}
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-check form-switch mb-3 custom-switch">
                {{ form_widget(form.require_cash, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                {{ form_label(form.require_cash, null, {'label_attr': {'class': 'form-check-label fw-bold font-weight-bold text-gray-700 ms-2'}}) }}
            </div>
            <div class="form-check form-switch custom-switch">
                {{ form_widget(form.require_prepaid, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                {{ form_label(form.require_prepaid, null, {'label_attr': {'class': 'form-check-label fw-bold font-weight-bold text-gray-700 ms-2'}}) }}
            </div>
        </div>
    </div>

    <div class="mt-5 d-flex justify-content-between align-items-center border-top pt-4">
        <span class="text-muted small"><i class="fas fa-info-circle me-1"></i> Bitte alle Pflichtfelder ausfüllen.</span>
        <button class="btn btn-primary btn-lg px-5 shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 12px;">
            <i class="fas fa-save me-2"></i> {{ button_label|default('Kunde speichern') }}
        </button>
    </div>
{{ form_end(form) }}
