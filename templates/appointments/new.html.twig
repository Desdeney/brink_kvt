        </div>
        <div class="row mb-4">
            <div class="col-md-3">
                {{ form_label(form.setup_with_location) }}
                {{ form_widget(form.setup_with_location) }}
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-3">
                {{ form_label(form.teardown_with_location) }}
                {{ form_widget(form.teardown_with_location) }}
            </div>
        </div>
        <div id="setup_fields" class="row mb-4 d-none">
