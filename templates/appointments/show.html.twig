{% extends 'base.html.twig' %}

{% block title %}Appointments{% endblock %}
    {% block header %}
        {{ appointment.occasion ~ ' von ' ~ appointment.customer.prename ~ ' ' ~ appointment.customer.lastname ~ ' am ' ~ (appointment.date|date('d.m.Y')) }}
    {% endblock %}
{% block body %}

    {% set diff = 0 %}
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-calendar-check text-primary"></i>Termindetails: {{ appointment.occasion }}
        </h1>
        <div class="page-actions">
            <a href="{{ path('app_appointments_index') }}" class="btn btn-outline-secondary btn-standard shadow-sm">
                <i class="fas fa-arrow-left me-2"></i>Zurück
            </a>
            <a href="{{ path('app_appointments_edit', {'id': appointment.id}) }}" class="btn btn-primary btn-standard shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="fas fa-edit me-2"></i>Bearbeiten
            </a>
        </div>
    </div>

    {% set diff = 0 %}
    {% if appointment.startTime and appointment.endTime %}
        {% set start = appointment.startTime|date('U') %}
        {% set end = appointment.endTime|date('U') %}
        {% if end < start %}
            {% set end = end + 86400 %}
        {% endif %}
        {% set diff = (end - start) / 3600 %}
    {% endif %}

    <div class="row">
        <!-- Haupt-Info Karte -->
        <div class="col-xl-8">
            <div class="card data-card shadow mb-4">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-info-circle me-2"></i>Veranstaltungsdetails</h6>
                </div>
                <div class="card-body p-0">
                    <table class="table data-table mb-0">
                        <tbody>
                            <tr>
                                <th width="30%">Datum</th>
                                <td><i class="fas fa-calendar-day me-2 text-muted"></i><strong>{{ appointment.date|date('d.m.Y') }}</strong></td>
                            </tr>
                            <tr>
                                <th>Zeitraum</th>
                                <td>
                                    <i class="fas fa-clock me-2 text-muted"></i>
                                    {{ appointment.startTime|date('H:i') }} - {{ appointment.endTime|date('H:i') }} Uhr 
                                    <span class="badge bg-light text-primary border ms-2">{{ diff|round(1) }} Stunden</span>
                                </td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>
                                    {% if appointment.isConfirmed %}
                                        <span class="badge rounded-pill bg-success-soft" style="background-color: #d1e7dd; color: #0f5132; padding: 0.5rem 1rem;">
                                            <i class="fas fa-check-circle me-1"></i>Bestätigt
                                        </span>
                                    {% else %}
                                        <span class="badge rounded-pill bg-warning-soft" style="background-color: #fff3cd; color: #664d03; padding: 0.5rem 1rem;">
                                            <i class="fas fa-clock me-1"></i>Ausstehend
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Gäste</th>
                                <td>
                                    <i class="fas fa-users me-2 text-muted"></i>
                                    {{ appointment.attendeesCount }} Personen ({{ appointment.attendeesAgeFrom }} bis {{ appointment.attendeesAgeTo }} Jahre)
                                </td>
                            </tr>
                            {% if appointment.attendeesNotes %}
                            <tr>
                                <th>Gäste-Infos</th>
                                <td class="text-muted small">{{ appointment.attendeesNotes }}</td>
                            </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Kalkulation Karte -->
            <div class="card data-card shadow mb-4">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-calculator me-2"></i>Kalkulation</h6>
                </div>
                <div class="card-body p-0">
                    <table class="table data-table mb-0">
                        <tbody>
                            <tr>
                                <th width="30%">DJ Honorar</th>
                                <td>{{ appointment.priceDjHour|number_format(2, ',', '.') }} €/Std. × {{ diff|round(1) }} Std. = <strong>{{ (appointment.priceDjHour * diff)|number_format(2, ',', '.') }} €</strong></td>
                            </tr>
                            <tr>
                                <th>Technik</th>
                                <td>{{ appointment.priceTech|number_format(2, ',', '.') }} €</td>
                            </tr>
                            {% if appointment.priceApproach > 0 %}
                            <tr>
                                <th>Anfahrt</th>
                                <td>{{ appointment.priceApproach|number_format(2, ',', '.') }} €</td>
                            </tr>
                            {% endif %}
                            <tr class="table-light">
                                <th class="text-primary">Gesamtbetrag</th>
                                <td class="text-primary font-weight-bold" style="font-size: 1.2rem;">
                                    {{ ((appointment.priceDjHour * diff) + appointment.priceTech + appointment.priceApproach)|number_format(2, ',', '.') }} €
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar Info (Kunde & Location) -->
        <div class="col-xl-4">
            <div class="card data-card shadow mb-4">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-user text-white me-2"></i>Kunde</h6>
                </div>
                <div class="card-body">
                    <h5 class="font-weight-bold mb-1">{{ appointment.customer.prename }} {{ appointment.customer.lastname }}</h5>
                    <p class="text-muted small mb-3">
                        <i class="fas fa-map-marker-alt me-1"></i> {{ appointment.customer.street }} {{ appointment.customer.housenr }}, {{ appointment.customer.postal }} {{ appointment.customer.city }}
                    </p>
                    <div class="d-grid">
                        <a href="{{ path('app_customer_show', { id: appointment.customer.id }) }}" class="btn btn-light btn-sm border">
                            <i class="fas fa-external-link-alt me-1"></i>Kundenakte öffnen
                        </a>
                    </div>
                </div>
            </div>

            <div class="card data-card shadow mb-4">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-map-marked-alt text-white me-2"></i>Location</h6>
                </div>
                <div class="card-body">
                    <h5 class="font-weight-bold mb-1">{{ appointment.location.locationName }}</h5>
                    <p class="text-muted small mb-3">
                        <i class="fas fa-map-marker-alt me-1"></i> {{ appointment.location.street }} {{ appointment.location.streetnr }}, {{ appointment.location.postal }} {{ appointment.location.city }}
                    </p>
                    {% if appointment.location.notes %}
                        <div class="alert alert-light border small mb-3">
                            <strong>Hausregeln/Notizen:</strong><br>
                            {{ appointment.location.notes }}
                        </div>
                    {% endif %}
                    <div class="d-grid">
                        <a href="{{ path('app_location_show', { id: appointment.location.id }) }}" class="btn btn-light btn-sm border">
                            <i class="fas fa-external-link-alt me-1"></i>Location-Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Checklisten Sektion -->
    <div class="card data-card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-tasks me-2"></i>Checklisten</h6>
            <form action="{{ path('app_checklist_add', {'id': appointment.id}) }}" method="post" class="d-flex align-items-center">
                <select name="template_id" class="form-select form-select-sm me-2" style="width: auto; border-radius: 8px;">
                    <option value="">-- Neue Checkliste --</option>
                    {% for template in checklist_templates|default([]) %}
                        <option value="{{ template.id }}">{{ template.name }}</option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-light btn-sm font-weight-bold px-3" style="border-radius: 8px;">
                    <i class="fas fa-plus me-1 text-primary"></i> Erstellen
                </button>
            </form>
        </div>
        <div class="card-body p-0">
            {% if appointment.checklists|length > 0 %}
                <div class="table-responsive">
                    <table class="table data-table table-hover mb-0">
                        <thead style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <tr>
                                <th class="ps-4 text-white">Name</th>
                                <th class="text-white">Status</th>
                                <th class="text-white">Sichtbarkeit</th>
                                <th class="text-white">Abgeschlossen</th>
                                <th class="text-end pe-4 text-white">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for checklist in appointment.checklists %}
                                <tr>
                                    <td class="ps-4">
                                        <i class="fas fa-clipboard-check me-2 text-muted"></i>
                                        <strong>{{ checklist.title }}</strong>
                                    </td>
                                    <td>
                                        {% if checklist.isCompleted %}
                                            <span class="badge bg-success shadow-sm">Abgeschlossen</span>
                                        {% else %}
                                            <span class="badge bg-warning text-dark shadow-sm">In Bearbeitung</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <form action="{{ path('app_checklist_toggle_public', {'id': checklist.id}) }}" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-sm {{ checklist.isPublic ? 'btn-success' : 'btn-outline-secondary' }} btn-standard" style="padding: 0.25rem 0.75rem !important; font-size: 0.7rem !important;">
                                                <i class="fas {{ checklist.isPublic ? 'fa-globe-europe' : 'fa-lock' }} me-1"></i>
                                                {{ checklist.isPublic ? 'Öffentlich' : 'Privat' }}
                                            </button>
                                        </form>
                                        {% if checklist.isPublic %}
                                            <div class="mt-2" style="max-width: 200px;">
                                                <div class="input-group input-group-sm">
                                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-link text-muted" style="font-size: 0.7rem;"></i></span>
                                                    <input type="text" class="form-control form-control-sm border-start-0" readonly value="{{ url('app_checklist_public', {'token': checklist.publicToken}) }}" onclick="this.select();" style="font-size: 0.65rem;">
                                                </div>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td class="text-muted">{{ checklist.completedAt ? checklist.completedAt|date('d.m.Y H:i') : '-' }}</td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a href="{{ path('app_checklist_show', {'id': checklist.id}) }}" class="btn btn-light btn-sm border" title="Bearbeiten">
                                                <i class="fas fa-edit text-primary"></i>
                                            </a>
                                            <a href="{{ path('app_checklist_pdf', {'id': checklist.id}) }}" class="btn btn-light btn-sm border" title="PDF">
                                                <i class="fas fa-file-pdf text-danger"></i>
                                            </a>
                                            <form action="{{ path('app_checklist_email', {'id': checklist.id}) }}" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-light btn-sm border" title="E-Mail">
                                                    <i class="fas fa-envelope text-info"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-clipboard-list fa-3x mb-3 opacity-25"></i>
                    <p>Noch keine Checklisten für diesen Termin angelegt.</p>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="mb-5"></div>
{% endblock %}
