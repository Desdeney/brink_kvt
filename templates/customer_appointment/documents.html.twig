{% extends 'base.html.twig' %}

{% block title %}Dokumente{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Dokumente für {{ appointment.occasion }}</h1>
        <p class="lead">Hier können Sie Dokumente hochladen und einsehen.</p>

        <div class="card mb-4">
            <div class="card-header">
                Upload
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.file) }}
                    <button class="btn btn-primary mt-3">Hochladen</button>
                    <a href="{{ path('app_customer_appointment_view', {'token': appointment.token}) }}" class="btn btn-secondary mt-3">Zurück</a>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Vorhandene Dokumente
            </div>
            <ul class="list-group list-group-flush">
                {% for document in documents %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ asset('uploads/' ~ document.filename) }}" target="_blank">
                            {{ document.originalName }}
                        </a>
                        <small class="text-muted">{{ document.uploadedAt|date('d.m.Y H:i') }}</small>
                    </li>
                {% else %}
                    <li class="list-group-item">Keine Dokumente vorhanden.</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
