{% extends 'base.html.twig' %}

{% block title %}Einstellungen | Brink VA{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Einstellungen</h1>
    </div>

    <div class="row">
        <!-- Checklist Templates Card -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Checklisten</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Templates verwalten</div>
                            <p class="text-muted small mt-2">Erstellen und bearbeiten Sie Vorlagen für Checklisten, die Sie Veranstaltungen zuordnen können.</p>
                            <a href="{{ path('app_checklist_template_index') }}" class="btn btn-primary btn-sm mt-2">
