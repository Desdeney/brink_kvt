{{ form_start(form) }}
    <div class="row g-4">
        <div class="col-md-12 mb-3">
            {{ form_label(form.location_name, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.location_name) }}
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-9 mb-3">
            {{ form_label(form.street, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.street) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_label(form.streetnr, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.streetnr) }}
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-4 mb-3">
            {{ form_label(form.postal, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.postal) }}
        </div>
        <div class="col-md-8 mb-3">
            {{ form_label(form.city, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.city) }}
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-12 mb-3">
            {{ form_label(form.notes, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.notes) }}
        </div>
    </div>

    <hr class="my-4">
    
    <div class="card bg-light border-0 mb-4" style="border-radius: 12px;">
        <div class="card-body">
            <h6 class="font-weight-bold mb-3"><i class="fas fa-user-tie me-2"></i>Kontaktperson</h6>
            <div class="mb-3">
                {{ form_label(form.contact_id, null, {'label_attr': {'class': 'form-label fw-bold small'}}) }}
                {{ form_widget(form.contact_id, {'attr': {'class': 'form-select form-select-lg shadow-sm'}}) }}
            </div>
            
            <div class="mt-3">
                <p class="small text-muted mb-2">Oder legen Sie eine neue an:</p>
                <div class="p-3 border rounded bg-white">
                    {{ form_widget(form.new_contact) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end">
        <button class="btn btn-primary btn-lg px-5 shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 12px;">
            <i class="fas fa-save me-2"></i> {{ button_label|default('Location speichern') }}
        </button>
    </div>
{{ form_end(form) }}
