{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Location_name</th>
                <td>{{ location.locationName }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ location.street }}</td>
            </tr>
            <tr>
                <th>Streetnr</th>
                <td>{{ location.streetnr }}</td>
            </tr>
            <tr>
                <th>Postal</th>
                <td>{{ location.postal }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ location.city }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ location.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
