{% extends 'base.html.twig' %}

{% block title %}Benutzer bearbeiten | Brink VA{% endblock %}

{% block body %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4 pb-3 border-bottom">
        <h1 class="h3 mb-0 text-gray-800 font-weight-bold">
            <i class="fas fa-user-edit me-2 text-primary"></i>Benutzer bearbeiten: {{ user.fullName }}
        </h1>
        <a href="{{ path('app_user_index') }}" class="btn btn-sm btn-outline-secondary shadow-sm px-4 py-2" style="border-radius: 10px;">
            <i class="fas fa-arrow-left fa-sm me-2"></i> Zurück zur Liste
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg mb-4 border-0" style="border-radius: 15px; overflow: hidden;">
                <div class="card-header py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-user-circle me-2"></i>Benutzerdaten aktualisieren</h6>
                </div>
                <div class="card-body p-4">
                    {{ include('user/_form.html.twig', {'button_label': 'Änderungen speichern'}) }}
                </div>
            </div>

            <div class="card shadow-lg mb-4 border-0" style="border-radius: 15px; overflow: hidden; border-left: 5px solid #e74a3b !important;">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <h6 class="font-weight-bold text-danger mb-2"><i class="fas fa-exclamation-triangle me-2"></i>Gefahrenzone</h6>
                        <p class="text-muted small mb-0">Das Löschen eines Benutzers entfernt dessen Zugang zum System dauerhaft.</p>
                    </div>
                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Sicher?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-danger btn-sm shadow-sm">
                            <i class="fas fa-trash me-2"></i>Benutzer löschen
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
