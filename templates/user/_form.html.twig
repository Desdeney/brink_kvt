{{ form_start(form) }}
    <div class="row g-4">
        <div class="col-md-6 mb-3">
            {{ form_label(form.prename, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.prename) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.lastname, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.lastname) }}
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-6 mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.email) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.username, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.username) }}
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-12 mb-3">
            {{ form_label(form.password, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.password) }}
        </div>
    </div>

    <hr class="my-4">

    <div class="row g-4">
        <div class="col-md-6 mb-3">
            {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.roles) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(form.isBlocked, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.isBlocked) }}
        </div>
    </div>

    <div class="mt-5 d-flex justify-content-end">
        <button class="btn btn-primary btn-lg px-5 shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 12px;">
            <i class="fas fa-save me-2"></i> {{ button_label|default('Benutzer speichern') }}
        </button>
    </div>
{{ form_end(form) }}
