{% extends 'base.html.twig' %}

{% block title %}Benutzerverwaltung | Brink VA{% endblock %}

{% block body %}
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-users-cog"></i>Benutzerverwaltung
        </h1>
        <a href="{{ path('app_user_new') }}" class="btn btn-primary btn-standard shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <i class="fas fa-user-plus fa-sm text-white-50 me-2"></i> Neuer Benutzer
        </a>
    </div>

    <div class="card data-card shadow mb-4">
        <div class="card-header py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-list me-2"></i>Alle Systembenutzer</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table data-table table-hover align-middle mb-0">
                    <thead style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <tr>
                            <th class="ps-4 text-white">Name</th>
                            <th class="text-white">Email / Benutzername</th>
                            <th class="text-white">Rollen</th>
                            <th class="text-white">Status</th>
                            <th class="text-end pe-4 text-white">Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 0.8rem;">
                                        {{ user.prename|first|upper }}{{ user.lastname|first|upper }}
                                    </div>
                                    <div>
                                        <div class="fw-bold">{{ user.fullName }}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="small"><i class="fas fa-envelope me-1 text-muted"></i> {{ user.email }}</div>
                                <div class="small text-muted"><i class="fas fa-user me-1 text-muted"></i> {{ user.username }}</div>
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_ADMIN' %}
                                        <span class="badge bg-danger shadow-sm">Admin</span>
                                    {% else %}
                                        <span class="badge bg-info shadow-sm">User</span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% if user.isBlocked %}
                                    <span class="badge bg-secondary">Gesperrt</span>
                                {% else %}
                                    <span class="badge bg-success">Aktiv</span>
                                {% endif %}
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm" style="border-radius: 8px; overflow: hidden;">
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-light border-end" title="Bearbeiten">
                                        <i class="fas fa-edit text-primary"></i>
                                    </a>
                                    {% if user.isBlocked %}
                                        <form method="post" action="{{ path('app_user_unblock', {'id': user.id}) }}" style="display:inline-block">
                                            <button class="btn btn-sm btn-light border-end" title="Entsperren">
                                                <i class="fas fa-unlock text-success"></i>
                                            </button>
                                        </form>
                                    {% else %}
                                        <form method="post" action="{{ path('app_user_block', {'id': user.id}) }}" style="display:inline-block">
                                            <button class="btn btn-sm btn-light border-end" title="Sperren">
                                                <i class="fas fa-user-slash text-warning"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display:inline-block" onsubmit="return confirm('Benutzer wirklich löschen?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="btn btn-sm btn-light" title="Löschen">
                                            <i class="fas fa-trash text-danger"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-users-slash fa-3x mb-3 opacity-25"></i>
                                <p>Keine Benutzer gefunden.</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
