{% extends 'base.html.twig' %}

{% block title %}Checklisten-Templates | Brink VA{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-clipboard-list text-primary"></i>Checklisten-Templates
        </h1>
        <div class="page-actions">
            <a href="{{ path('app_checklist_template_new') }}" class="btn btn-primary btn-standard shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="fas fa-plus fa-sm text-white-50 me-2"></i> Neues Template erstellen
            </a>
        </div>
    </div>

    <div class="card data-card shadow mb-4">
        <div class="card-header py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h6 class="m-0 font-weight-bold text-white">Vorhandene Templates</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table data-table table-hover mb-0">
                    <thead style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <tr>
                            <th class="ps-4 text-white">Name</th>
                            <th class="text-white">Beschreibung</th>
                            <th class="text-white">Fragen</th>
                            <th class="text-end pe-4 text-white">Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for checklist_template in checklist_templates %}
                        <tr>
                            <td class="ps-4">
                                <i class="fas fa-file-alt me-2 text-muted"></i>
                                <strong>{{ checklist_template.name }}</strong>
                            </td>
                            <td>{{ checklist_template.description|default('-')|slice(0, 80) }}{% if checklist_template.description|length > 80 %}...{% endif %}</td>
                            <td>
                                <span class="badge rounded-pill bg-light text-primary border">
                                    {{ checklist_template.questions|length }} Fragen
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_checklist_template_edit', {'id': checklist_template.id}) }}" class="btn btn-sm btn-light border" title="Bearbeiten">
                                        <i class="fas fa-edit text-primary"></i>
                                    </a>
                                    {{ include('checklist_template/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fas fa-clipboard fa-3x mb-3 opacity-25"></i>
                                <p>Keine Templates gefunden.</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a href="{{ path('app_settings') }}" class="btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> Zur√ºck zu den Einstellungen
        </a>
    </div>
</div>
{% endblock %}
