{% extends 'base.html.twig' %}

{% block title %}Brink Veranstaltungstechnik :: Kundenmanagement{% endblock %}
{% block header %}Dashboard{% endblock %}
{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="current_user" style="display:flex; align-items:center;">
        <img src="{{ asset('img/avatar.png') }}"
             alt="avatar"
             width="64"
             height="64"
             style="flex:0 0 auto; display:block;" />

        <div style="display:flex; flex-direction:column; margin-left:16px; min-width:0;">
            <div class="name" style="font-weight:600; line-height:1.2;">
                Fabian Ernst
                <span>
        <i class="fas fa-pencil c-pointer text-color-brink" aria-hidden="true"></i>
      </span>
            </div>
            <div class="role" style="opacity:.8; line-height:1.3;">
                Administrator | Geschäftsführer
            </div>
        </div>
    </div>

    <style>
        .name {
            font-weight: bold;
        }

    </style>

{% endblock %}